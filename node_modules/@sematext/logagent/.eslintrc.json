{
  "globals": {
    "describe": true,
    "it": true
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-console": [
      0
    ],
    "no-unused-vars": [
      2, 
      {"vars": "local", "args": "none"}
    ]
  }
}
